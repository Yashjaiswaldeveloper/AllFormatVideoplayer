<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/draw_layout"
    android:background="@color/background"
    android:layout_height="match_parent"
    tools:context="com.ffapp.ffxx.ffplayers.activity.MainActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@color/red">

            <RelativeLayout
                android:id="@+id/navi_btn"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_centerVertical="true">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_centerInParent="true"
                    android:padding="5dp"
                    android:src="@drawable/ic_menu">

                </ImageView>

            </RelativeLayout>

            <TextView
                android:id="@+id/title_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/navi_btn"
                android:fontFamily="@font/mulishmedium"
                android:text="All Format Video player 2022"
                android:textColor="#fff"
                android:textSize="18dp" />

            <RelativeLayout
                android:id="@+id/short_btn"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:padding="5dp"
                    android:src="@drawable/ic_sort">

                </ImageView>

            </RelativeLayout>
        </RelativeLayout>

        <FrameLayout
            android:id="@+id/container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/buttom_menu"
            android:layout_below="@+id/toolbar" />
        <LinearLayout
            android:visibility="gone"
            android:id="@+id/sucessfull"
            android:layout_below="@+id/toolbar"
            android:layout_centerInParent="true"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <androidx.cardview.widget.CardView
                android:id="@+id/all_video_folder"
                android:layout_width="match_parent"
                android:layout_height="80dp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp">
                    <ImageView
                        android:id="@+id/img_plasy"
                        android:src="@drawable/player_img"
                        android:layout_marginLeft="15dp"
                        android:layout_centerVertical="true"
                        android:layout_width="50dp"
                        android:layout_height="50dp"/>
                    <TextView
                        android:textSize="17dp"
                        android:textColor="#000"
                        android:paddingLeft="20dp"
                        android:layout_marginTop="18dp"
                        android:layout_toRightOf="@+id/img_plasy"
                        android:text="Player"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <ImageView
                        android:layout_alignParentRight="true"
                        android:src="@drawable/next_arrow"
                        android:layout_marginRight="15dp"
                        android:layout_centerVertical="true"
                        android:layout_width="30dp"
                        android:layout_height="30dp"/>
                </RelativeLayout>

            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_marginTop="10dp"
                android:id="@+id/all_video"
                android:layout_width="match_parent"
                android:layout_height="80dp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <ImageView
                        android:id="@+id/img_vido"
                        android:src="@drawable/player_img"
                        android:layout_marginLeft="15dp"
                        android:layout_centerVertical="true"
                        android:layout_width="50dp"
                        android:layout_height="50dp"/>
                    <TextView
                        android:textSize="17dp"
                        android:textColor="#000"
                        android:paddingLeft="20dp"
                        android:layout_marginTop="18dp"
                        android:layout_toRightOf="@+id/img_vido"
                        android:text="All Video"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <ImageView
                        android:layout_alignParentRight="true"
                        android:src="@drawable/next_arrow"
                        android:layout_marginRight="15dp"
                        android:layout_centerVertical="true"
                        android:layout_width="30dp"
                        android:layout_height="30dp"/>
                </RelativeLayout>

            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_marginTop="10dp"
                android:id="@+id/status_video"
                android:layout_width="match_parent"
                android:layout_height="80dp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <ImageView
                        android:id="@+id/status_vido"
                        android:src="@drawable/player_img"
                        android:layout_marginLeft="15dp"
                        android:layout_centerVertical="true"
                        android:layout_width="50dp"
                        android:layout_height="50dp"/>
                    <TextView
                        android:textSize="17dp"
                        android:textColor="#000"
                        android:paddingLeft="20dp"
                        android:layout_marginTop="18dp"
                        android:layout_toRightOf="@+id/status_vido"
                        android:text="Status Video"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <ImageView
                        android:layout_alignParentRight="true"
                        android:src="@drawable/next_arrow"
                        android:layout_marginRight="15dp"
                        android:layout_centerVertical="true"
                        android:layout_width="30dp"
                        android:layout_height="30dp"/>
                </RelativeLayout>

            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_marginTop="10dp"
                android:id="@+id/Gallery_image"
                android:layout_width="match_parent"
                android:layout_height="80dp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <ImageView
                        android:id="@+id/gall_image"
                        android:src="@drawable/player_img"
                        android:layout_marginLeft="15dp"
                        android:layout_centerVertical="true"
                        android:layout_width="50dp"
                        android:layout_height="50dp"/>
                    <TextView
                        android:textSize="17dp"
                        android:textColor="#000"
                        android:paddingLeft="20dp"
                        android:layout_marginTop="18dp"
                        android:layout_toRightOf="@+id/gall_image"
                        android:text="Gellary"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <ImageView
                        android:layout_alignParentRight="true"
                        android:src="@drawable/next_arrow"
                        android:layout_marginRight="15dp"
                        android:layout_centerVertical="true"
                        android:layout_width="30dp"
                        android:layout_height="30dp"/>
                </RelativeLayout>

            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_marginTop="10dp"
                android:id="@+id/filter_video"
                android:layout_width="match_parent"
                android:layout_height="80dp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <ImageView
                        android:id="@+id/filter_v"
                        android:src="@drawable/player_img"
                        android:layout_marginLeft="15dp"
                        android:layout_centerVertical="true"
                        android:layout_width="50dp"
                        android:layout_height="50dp"/>
                    <TextView
                        android:textSize="17dp"
                        android:textColor="#000"
                        android:paddingLeft="20dp"
                        android:layout_marginTop="18dp"
                        android:layout_toRightOf="@+id/filter_v"
                        android:text="Filter Video"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <ImageView
                        android:layout_alignParentRight="true"
                        android:src="@drawable/next_arrow"
                        android:layout_marginRight="15dp"
                        android:layout_centerVertical="true"
                        android:layout_width="30dp"
                        android:layout_height="30dp"/>
                </RelativeLayout>

            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_marginTop="10dp"
                android:id="@+id/timeline_video"
                android:layout_width="match_parent"
                android:layout_height="80dp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <ImageView
                        android:id="@+id/time_line_v"
                        android:src="@drawable/player_img"
                        android:layout_marginLeft="15dp"
                        android:layout_centerVertical="true"
                        android:layout_width="50dp"
                        android:layout_height="50dp"/>
                    <TextView
                        android:textSize="17dp"
                        android:textColor="#000"
                        android:paddingLeft="20dp"
                        android:layout_marginTop="18dp"
                        android:layout_toRightOf="@+id/time_line_v"
                        android:text="TimeLine Video"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <ImageView
                        android:layout_alignParentRight="true"
                        android:src="@drawable/next_arrow"
                        android:layout_marginRight="15dp"
                        android:layout_centerVertical="true"
                        android:layout_width="30dp"
                        android:layout_height="30dp"/>
                </RelativeLayout>

            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_marginTop="10dp"
                android:id="@+id/Lock_video_btn"
                android:layout_width="match_parent"
                android:layout_height="80dp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <ImageView
                        android:id="@+id/lock_line_v"
                        android:src="@drawable/player_img"
                        android:layout_marginLeft="15dp"
                        android:layout_centerVertical="true"
                        android:layout_width="50dp"
                        android:layout_height="50dp"/>
                    <TextView
                        android:textSize="17dp"
                        android:textColor="#000"
                        android:paddingLeft="20dp"
                        android:layout_marginTop="18dp"
                        android:layout_toRightOf="@+id/lock_line_v"
                        android:text="Lock Video"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <ImageView
                        android:layout_alignParentRight="true"
                        android:src="@drawable/next_arrow"
                        android:layout_marginRight="15dp"
                        android:layout_centerVertical="true"
                        android:layout_width="30dp"
                        android:layout_height="30dp"/>
                </RelativeLayout>

            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_marginTop="10dp"
                android:id="@+id/recycle_btn"
                android:layout_width="match_parent"
                android:layout_height="80dp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <ImageView
                        android:id="@+id/recycle_bin_v"
                        android:src="@drawable/player_img"
                        android:layout_marginLeft="15dp"
                        android:layout_centerVertical="true"
                        android:layout_width="50dp"
                        android:layout_height="50dp"/>
                    <TextView
                        android:textSize="17dp"
                        android:textColor="#000"
                        android:paddingLeft="20dp"
                        android:layout_marginTop="18dp"
                        android:layout_toRightOf="@+id/recycle_bin_v"
                        android:text="Recycle bin"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <ImageView
                        android:layout_alignParentRight="true"
                        android:src="@drawable/next_arrow"
                        android:layout_marginRight="15dp"
                        android:layout_centerVertical="true"
                        android:layout_width="30dp"
                        android:layout_height="30dp"/>
                </RelativeLayout>

            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/buttom_menu"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_alignParentBottom="true">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_alignParentBottom="true">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:orientation="horizontal">

                        <RelativeLayout
                            android:id="@+id/folder_btn"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:layout_marginLeft="30dp"
                            android:layout_weight="1"
                            android:background="@drawable/circle_btn">

                            <ImageView
                                android:id="@+id/img_btn"
                                android:layout_width="35dp"
                                android:layout_height="35dp"
                                android:layout_centerHorizontal="true"
                                android:padding="7dp"
                                android:src="@drawable/ic_player" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/img_btn"
                                android:fontFamily="@font/mulishmedium"
                                android:gravity="center"
                                android:text="Player"
                                android:textSize="13dp" />

                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/gall_btn"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:layout_centerInParent="true"
                            android:layout_weight="1">

                            <ImageView
                                android:id="@+id/gall_img"
                                android:layout_width="35dp"
                                android:layout_height="35dp"
                                android:layout_centerHorizontal="true"
                                android:padding="7dp"
                                android:src="@drawable/ic_gallery" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/gall_img"
                                android:fontFamily="@font/mulishmedium"
                                android:gravity="center"
                                android:text="Gallery"
                                android:textSize="12dp" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/status_btn"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="30dp"
                            android:layout_weight="1">

                            <ImageView
                                android:id="@+id/status_img"
                                android:layout_width="35dp"
                                android:layout_height="35dp"
                                android:layout_centerHorizontal="true"
                                android:padding="7dp"
                                android:src="@drawable/ic_status" />

                            <TextView

                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/status_img"
                                android:fontFamily="@font/mulishmedium"
                                android:gravity="center"
                                android:text="Status"
                                android:textSize="12dp" />
                        </RelativeLayout>
                    </RelativeLayout>
                </RelativeLayout>

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:visibility="gone">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:visibility="gone">

                    <RelativeLayout
                        android:layout_width="70dp"
                        android:layout_height="match_parent"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/circle_btn">

                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_centerHorizontal="true"
                            android:layout_margin="10dp"
                            android:background="@drawable/circle_bg" />
                    </RelativeLayout>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <RelativeLayout
                        android:layout_width="70dp"
                        android:layout_height="match_parent"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/circle_btn">

                    </RelativeLayout>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <RelativeLayout
                        android:layout_width="70dp"
                        android:layout_height="match_parent"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/circle_btn">

                    </RelativeLayout>

                </RelativeLayout>
            </LinearLayout>

        </RelativeLayout>
    </RelativeLayout>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navigationView"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="left"
        android:fitsSystemWindows="false"
        >
        <LinearLayout
            android:id="@+id/avfl_ll_SideMenuBackground"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
           android:background="#2362D3"
            android:orientation="vertical">
            <RelativeLayout
                android:id="@+id/header_btn"
                android:background="#5D9CEC"
                android:layout_width="match_parent"
                android:layout_height="200dp">
                <ImageView
                    android:layout_centerInParent="true"
                    android:id="@+id/avfl_img_Logo"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="48dp"
                    android:layout_marginBottom="20dp"
                    android:src="@drawable/menu_logo"
                    />
            </RelativeLayout>

            <View
                android:visibility="gone"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="20dp"
                android:background="#c5cdd8"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycle_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="20dp"
                android:fadeScrollbars="true"
                android:scrollbars="vertical" />
        </LinearLayout>
    </com.google.android.material.navigation.NavigationView>

</androidx.drawerlayout.widget.DrawerLayout>