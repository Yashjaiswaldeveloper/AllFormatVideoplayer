<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="2"
    tools:context="com.ffapp.ffxx.ffplayers.activity.StartActivity">
    <LinearLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <RelativeLayout
            android:id="@+id/native_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/gray">

        </RelativeLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal">
        <RelativeLayout
            android:background="@drawable/bg_start"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/title_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="35dp"
                android:fontFamily="@font/mulishbold"
                android:gravity="center"
                android:scaleX="1.1"
                android:scaleY="1.1"
                android:text="All Format Video player 2022"
                android:textColor="#000"
                android:textSize="20dp" />
            <TextView
                android:scaleY="1.2"
                android:scaleX="1.1"
                android:fontFamily="@font/mulishmedium"
                android:textSize="15dp"
                android:textColor="#000"
                android:text="All Type Formats Supported"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:layout_below="@+id/title_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <RelativeLayout
                android:id="@+id/start_btn"
                android:layout_centerInParent="true"
                android:layout_width="match_parent"
                android:layout_height="60dp">
               <RelativeLayout
                   android:layout_centerHorizontal="true"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content">

                   <TextView
                       android:id="@+id/start_txt"
                       android:layout_width="220dp"
                       android:layout_height="match_parent"
                       android:layout_centerInParent="true"
                       android:layout_marginLeft="20dp"
                       android:background="@color/red"
                       android:gravity="center"
                       android:text="Start"
                       android:textColor="#fff"
                       android:textSize="18dp"></TextView>
                   <ImageView
                       android:layout_centerVertical="true"
                       android:src="@drawable/icccc_play"
                       android:layout_width="30dp"
                       android:layout_height="30dp"/>
               </RelativeLayout>



            </RelativeLayout>

        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/banner_ads"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_above="@+id/menu_temp"
            android:layout_alignParentBottom="true">

        </RelativeLayout>

    </LinearLayout>


</LinearLayout>