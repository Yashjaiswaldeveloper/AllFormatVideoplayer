<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/draw_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context="com.ffapp.ffxx.ffplayers.activity.HomeActivity">
    <RelativeLayout
        android:layout_above="@+id/menu_temp"
        android:id="@+id/native_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </RelativeLayout>
   <LinearLayout
      android:id="@+id/menu_temp"
       android:layout_marginLeft="60dp"
       android:layout_marginRight="60dp"
       android:layout_centerInParent="true"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="vertical">

       <RelativeLayout
           android:id="@+id/start_btn"
           android:background="@drawable/btn_start"
           android:layout_width="match_parent"
           android:layout_height="70dp">
           <ImageView
               android:padding="5dp"
               android:src="@drawable/iccc_start"
               android:layout_marginRight="20dp"
               android:layout_centerVertical="true"
               android:layout_alignParentRight="true"
               android:layout_width="30dp"
               android:layout_height="30dp"/>

           <TextView
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_centerVertical="true"
               android:fontFamily="@font/mulishbold"
               android:gravity="center"
               android:text="Start"
               android:textColor="#fff"
               android:textSize="16dp">

           </TextView>

       </RelativeLayout>
       <RelativeLayout
           android:id="@+id/share_btn"
           android:layout_marginBottom="10dp"
           android:layout_marginTop="10dp"
           android:background="@drawable/btn_share"
           android:layout_width="match_parent"
           android:layout_height="70dp">
           <ImageView
               android:padding="5dp"
               android:layout_marginRight="20dp"
               android:src="@drawable/iccc_share"
               android:layout_centerVertical="true"
               android:layout_alignParentRight="true"
               android:layout_width="30dp"
               android:layout_height="30dp"/>
           <TextView
               android:textSize="16dp"
               android:layout_centerVertical="true"
               android:textColor="#fff"
               android:gravity="center"
               android:fontFamily="@font/mulishbold"
               android:text="Share"
               android:layout_width="match_parent"
               android:layout_height="wrap_content">

           </TextView>

       </RelativeLayout>


   </LinearLayout>

    <RelativeLayout
        android:id="@+id/banner_ads"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_above="@+id/menu_temp"
        android:layout_alignParentBottom="true">

    </RelativeLayout>
</RelativeLayout>