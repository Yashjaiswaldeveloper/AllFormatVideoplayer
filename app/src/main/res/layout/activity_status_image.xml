<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context="com.ffapp.ffxx.ffplayers.activity.StatusImageActivity">
    <RelativeLayout
        android:background="@color/red"
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="60dp">
        <RelativeLayout
            android:id="@+id/back_btn"
            android:layout_centerVertical="true"
            android:layout_width="60dp"
            android:layout_height="60dp">
            <ImageView
                android:layout_marginLeft="10dp"
                android:layout_centerVertical="true"
                android:padding="5dp"
                android:src="@drawable/ic_back_arrow"
                android:layout_width="30dp"
                android:layout_height="30dp">
            </ImageView>

        </RelativeLayout>

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:fontFamily="@font/mulishsemibold"
            android:gravity="center"
            android:text="Image"
            android:textColor="#fff"
            android:textSize="18dp" />
    </RelativeLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background"
        android:layout_above="@+id/buttom_temp"
        android:layout_below="@+id/toolbar"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="15dp"
        app:cardCornerRadius="10dp">

        <ImageView
            android:id="@+id/image_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginBottom="20dp"></ImageView>
    </androidx.cardview.widget.CardView>

    <RelativeLayout
        android:id="@+id/buttom_temp"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="130dp">
        <RelativeLayout
            android:layout_marginBottom="10dp"
            android:layout_above="@+id/banner_ads"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:background="@drawable/save_bg"
                android:textSize="15dp"
                android:fontFamily="@font/mulishmedium"
                android:textColor="#fff"
                android:gravity="center"
                android:text="Share"
                android:layout_marginRight="15dp"
                android:layout_toLeftOf="@+id/center_txt"
                android:id="@+id/share_btn"
                android:layout_width="150dp"
                android:layout_height="60dp">
            </TextView>
            <View
                android:id="@+id/center_txt"
                android:layout_centerInParent="true"
                android:layout_width="1dp"
                android:layout_height="1dp"/>

            <TextView
                android:id="@+id/save_btn"
                android:layout_width="150dp"
                android:layout_height="60dp"
                android:layout_marginLeft="15dp"
                android:layout_toRightOf="@+id/center_txt"
                android:background="@drawable/share_bg"
                android:fontFamily="@font/mulishmedium"
                android:gravity="center"
                android:text="Save"
                android:textColor="#fff"
                android:textSize="15dp">

            </TextView>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/banner_ads"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_alignParentBottom="true"></RelativeLayout>
    </RelativeLayout>
</RelativeLayout>