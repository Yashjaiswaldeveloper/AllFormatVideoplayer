<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@drawable/volume_border"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_marginTop="30dp"
            android:id="@+id/subtitle_btn"
            android:layout_marginLeft="20dp"
            android:layout_width="match_parent"
            android:layout_height="30dp">
            <TextView
                android:textStyle="bold"
                android:paddingLeft="10dp"
                android:layout_centerVertical="true"
                android:textSize="18dp"
                android:textColor="#fff"
                android:text="Delete video from device ?"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/off_line_title"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_marginRight="30dp"
                android:paddingLeft="10dp"
                android:layout_centerVertical="true"
                android:textSize="14dp"
                android:textColor="#fff"
                android:text="Video will be deleted permanently\n from device"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/check_temp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:paddingLeft="10dp"
                android:layout_toRightOf="@+id/check_box"
                android:id="@+id/check_title"
                android:layout_centerVertical="true"
                android:textSize="17dp"
                android:textColor="#fff"
                android:text="Move to Recycle Bin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <CheckBox
                android:buttonTint="#fff"
                android:scaleY="1.3"
                android:scaleX="1.3"
                android:id="@+id/check_box"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </RelativeLayout>
        <RelativeLayout
            android:layout_marginBottom="20dp"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="40dp">
            <TextView
                android:id="@+id/cancel_btn"
                android:gravity="center"
                android:layout_marginRight="20dp"
                android:layout_toLeftOf="@+id/delete_btn"
                android:layout_centerVertical="true"
                android:textSize="14dp"
                android:textColor="#fff"
                android:text="CANCEL"
                android:layout_width="100dp"
                android:layout_height="match_parent"/>
            <TextView
                android:layout_marginRight="10dp"
                android:gravity="center"
                android:id="@+id/delete_btn"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:textSize="14dp"
                android:textColor="#fff"
                android:text="DELETE"
                android:layout_width="100dp"
                android:layout_height="match_parent"/>


        </RelativeLayout>


    </LinearLayout>
</RelativeLayout>