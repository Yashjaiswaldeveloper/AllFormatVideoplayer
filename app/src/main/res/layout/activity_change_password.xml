<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/background"
    android:layout_height="match_parent"
    tools:context="com.ffapp.ffxx.ffplayers.activity.ChangePasswordActivity">
    <TextView
        android:fontFamily="@font/mulishbold"
        android:textSize="23dp"
        android:gravity="center"
        android:id="@+id/icon_btn"
        android:textColor="#fff"
        android:layout_width="match_parent"
        android:text="Video Guard"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        />


    <RelativeLayout
        android:layout_centerInParent="true"
        android:id="@+id/change_pass"
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/title_btn"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:layout_centerHorizontal="true"
            android:textSize="17dp"
            android:textColor="#fff"
            android:text="Enter your old password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </TextView>
        <RelativeLayout
            android:id="@+id/point_btn"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/title_btn"
            android:layout_width="match_parent"
            android:layout_height="40dp">
            <EditText
                android:textColor="@color/background"
                android:maxLength="4"
                android:background="@null"
                android:id="@+id/edit_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </EditText>
            <LinearLayout
                android:gravity="center"
                android:layout_centerInParent="true"
                android:layout_centerVertical="true"
                android:layout_width="160dp"
                android:layout_height="30dp">
                <RelativeLayout
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_width="25dp"
                    android:layout_height="25dp">
                    <ImageView
                        android:padding="5dp"
                        android:background="@drawable/circle_des"
                        android:id="@+id/fill_btn"
                        android:layout_centerInParent="true"
                        android:layout_width="25dp"
                        android:layout_height="25dp"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_width="25dp"
                    android:layout_height="25dp">
                    <ImageView
                        android:padding="5dp"
                        android:background="@drawable/circle_des"
                        android:id="@+id/fill_btn1"
                        android:layout_centerInParent="true"
                        android:layout_width="25dp"
                        android:layout_height="25dp"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_width="25dp"
                    android:layout_height="25dp">
                    <ImageView
                        android:padding="5dp"
                        android:background="@drawable/circle_des"
                        android:id="@+id/fill_btn2"
                        android:layout_centerInParent="true"
                        android:layout_width="25dp"
                        android:layout_height="25dp"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_width="25dp"
                    android:layout_height="25dp">
                    <ImageView
                        android:padding="5dp"
                        android:background="@drawable/circle_des"
                        android:id="@+id/fill_btn3"
                        android:layout_centerInParent="true"
                        android:layout_width="25dp"
                        android:layout_height="25dp"/>
                </RelativeLayout>
            </LinearLayout>
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/key_pad"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_marginTop="30dp"
            android:layout_below="@+id/point_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_marginBottom="10dp"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:background="@drawable/key_pad_bg"
                    android:id="@+id/one_btn"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    >

                    <TextView
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_centerInParent="true"
                        android:gravity="center"
                        android:text="1"
                        android:textColor="@color/colorPrimary"
                        android:textSize="20dp">

                    </TextView>


                </RelativeLayout>
                <RelativeLayout
                    android:layout_centerInParent="true"
                    android:background="@drawable/key_pad_bg"
                    android:id="@+id/two_btn"
                    android:layout_weight="1"
                    android:layout_width="70dp"
                    android:layout_height="70dp">
                    <TextView
                        android:gravity="center"
                        android:textColor="@color/colorPrimary"
                        android:textSize="20dp"
                        android:text="2"
                        android:layout_centerInParent="true"
                        android:layout_width="60dp"
                        android:layout_height="60dp"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_alignParentRight="true"
                    android:background="@drawable/key_pad_bg"
                    android:id="@+id/three_btn"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"
                    android:layout_width="70dp"
                    android:layout_height="70dp">
                    <TextView
                        android:gravity="center"
                        android:textColor="@color/colorPrimary"
                        android:textSize="20dp"
                        android:text="3"
                        android:layout_centerInParent="true"
                        android:layout_width="60dp"
                        android:layout_height="60dp"/>

                </RelativeLayout>

            </RelativeLayout>
            <RelativeLayout
                android:layout_marginBottom="10dp"
               android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:background="@drawable/key_pad_bg"
                    android:id="@+id/four_btn"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    >
                    <TextView
                        android:gravity="center"
                        android:textColor="@color/colorPrimary"
                        android:textSize="20dp"
                        android:text="4"
                        android:layout_centerInParent="true"
                        android:layout_width="60dp"
                        android:layout_height="60dp">

                    </TextView>


                </RelativeLayout>

                <RelativeLayout
                    android:layout_centerInParent="true"
                    android:background="@drawable/key_pad_bg"
                    android:id="@+id/five_btn"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:layout_width="70dp"
                    android:layout_height="70dp">
                    <TextView
                        android:gravity="center"
                        android:textColor="@color/colorPrimary"
                        android:textSize="20dp"
                        android:text="5"
                        android:layout_centerInParent="true"
                        android:layout_width="60dp"
                        android:layout_height="60dp"/>
                </RelativeLayout>
                <RelativeLayout
                   android:layout_alignParentRight="true"
                    android:background="@drawable/key_pad_bg"
                    android:id="@+id/six_btn"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"
                    android:layout_width="70dp"
                    android:layout_height="70dp">
                    <TextView
                        android:gravity="center"
                        android:textColor="@color/colorPrimary"
                        android:textSize="20dp"
                        android:text="6"
                        android:layout_centerInParent="true"
                        android:layout_width="60dp"
                        android:layout_height="60dp"/>

                </RelativeLayout>
            </RelativeLayout>
            <RelativeLayout
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:background="@drawable/key_pad_bg"
                    android:id="@+id/seven_btn"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    >
                    <TextView
                        android:gravity="center"
                        android:textColor="@color/colorPrimary"
                        android:textSize="20dp"
                        android:text="7"
                        android:layout_centerInParent="true"
                        android:layout_width="60dp"
                        android:layout_height="60dp">
                    </TextView>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_centerInParent="true"
                    android:background="@drawable/key_pad_bg"
                    android:id="@+id/eight_btn"
                    android:layout_weight="1"
                    android:layout_width="70dp"
                    android:layout_height="70dp">
                    <TextView
                        android:gravity="center"
                        android:textColor="@color/colorPrimary"
                        android:textSize="20dp"
                        android:text="8"
                        android:layout_centerInParent="true"
                        android:layout_width="60dp"
                        android:layout_height="60dp"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_alignParentRight="true"
                    android:background="@drawable/key_pad_bg"
                    android:id="@+id/nine_btn"
                    android:layout_weight="1"
                    android:layout_width="70dp"
                    android:layout_height="70dp">
                    <TextView
                        android:gravity="center"
                        android:textColor="@color/colorPrimary"
                        android:textSize="20dp"
                        android:text="9"
                        android:layout_centerInParent="true"
                        android:layout_width="60dp"
                        android:layout_height="60dp"/>
                </RelativeLayout>

            </RelativeLayout>
            <RelativeLayout
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:id="@+id/lock_btn"
                    android:layout_width="70dp"
                    android:layout_height="90dp"
                    android:layout_weight="1"
                    >
                    <TextView
                        android:gravity="center"
                        android:textSize="25dp"

                        android:layout_centerInParent="true"
                        android:layout_width="60dp"
                        android:layout_height="60dp">
                    </TextView>


                </RelativeLayout>

                <RelativeLayout
                    android:layout_centerInParent="true"
                    android:background="@drawable/key_pad_bg"
                    android:id="@+id/zero_btn"
                    android:layout_weight="1"
                    android:layout_width="70dp"
                    android:layout_height="70dp">
                    <TextView
                        android:gravity="center"
                        android:textColor="@color/colorPrimary"
                        android:textSize="20dp"
                        android:text="0"
                        android:layout_centerInParent="true"
                        android:layout_width="60dp"
                        android:layout_height="60dp"/>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_alignParentRight="true"
                    android:id="@+id/clear_btn"
                    android:layout_weight="1"
                    android:layout_width="70dp"
                    android:layout_height="90dp">
                    <ImageView
                        app:tint="#fff"
                        android:src="@drawable/back_ic"
                        android:gravity="center"
                        android:padding="13dp"
                        android:layout_centerInParent="true"
                        android:layout_width="60dp"
                        android:layout_height="60dp"/>
                </RelativeLayout>
            </RelativeLayout>

        </LinearLayout>

        <TextView
            android:visibility="gone"
            android:id="@+id/forget_pass"
            android:textColor="@color/colorPrimary"
            android:layout_marginTop="30dp"
            android:layout_below="@+id/key_pad"
            android:layout_centerHorizontal="true"
            android:text="Forget Password ?"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </RelativeLayout>
</RelativeLayout>